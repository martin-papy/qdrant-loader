# QDrant Loader Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# QDrant Configuration
# =============================================================================
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your_qdrant_api_key_here
QDRANT_COLLECTION_NAME=my_collection

# =============================================================================
# Embedding Configuration
# =============================================================================
# OpenAI API key (required if using OpenAI embeddings)
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# State Management
# =============================================================================
STATE_DB_PATH=./data/state.db

# =============================================================================
# Git Repository Configuration
# =============================================================================
REPO_TOKEN=your_github_token_here
REPO_URL=https://github.com/user/repo.git

# =============================================================================
# Confluence Configuration
# =============================================================================

# Confluence Cloud Configuration
CONFLUENCE_URL=https://your-domain.atlassian.net/wiki
CONFLUENCE_SPACE_KEY=YOUR_SPACE_KEY
CONFLUENCE_TOKEN=your_confluence_api_token
CONFLUENCE_EMAIL=your_email@company.com

# Confluence Data Center/Server Configuration
# Personal Access Token (required for Data Center/Server)
CONFLUENCE_PAT=your_personal_access_token

# =============================================================================
# Jira Configuration
# =============================================================================
JIRA_URL=https://your-domain.atlassian.net
JIRA_PROJECT_KEY=YOUR_PROJECT_KEY
JIRA_TOKEN=your_jira_api_token
JIRA_EMAIL=your_email@company.com

# =============================================================================
# Release Management (for maintainers)
# =============================================================================
GITHUB_TOKEN=your_github_token_for_releases

# =============================================================================
# Development and Testing
# =============================================================================
# Uncomment and set these for development/testing
# LOG_LEVEL=DEBUG
# MCP_DISABLE_CONSOLE_LOGGING=false 